<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sort_display_setting"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

    <TextView
            android:id="@+id/sort_title"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:textColor="@color/standard_selection_control_normal_primary"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    <ImageView
            android:id="@+id/sort_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_check_large"
            app:tint="@color/standard_selection_invisible_primary" />
</LinearLayout>